FROM nginx:1.27-alpine
WORKDIR /var/www/html
# Copy Laravel source so Nginx can resolve script filenames for php-fpm
COPY sprint5/API/ ./
# Nginx vhost that forwards PHP to the php-fpm container (service "api")
COPY _docker/api.nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx","-g","daemon off;"]